<svg width="520" height="225" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <foreignObject width="520" height="225">
        <div xmlns="http://www.w3.org/1999/xhtml">
            <style>

                div {
                    font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
                }

                .mycard {
                    width: 500px;
                    height: 200px;
                    border-radius: 25px;
                    border-style: solid;
                    border-color: #bd93f9;
                    background-color: #121212;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                    transition: 0.3s;
                }

                .mycard:hover {
                    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
                }

                .mycard_img {
                    margin-left: 25px;
                    margin-right: 25px;
                    margin-top: 25px;
                    margin-bottom: 25px;
                    width: 150px;
                    height: 150px;
                    background-size: cover !important;
                    background-repeat: no-repeat !important;
                    border-radius: 25px;
                    position: relative;
                }

                .mycard_text {
                    width: 290px;
                    height: 150px;
                    border-radius: 25px;
                    position: relative;
                    top: -180px;
                    left: 190px;
                }

                .title {
                    width: 290px;
                    height: 30px;
                    color: #f8f8f2;
                    overflow: hidden;
                    font-size: 24px;
                    text-align: center;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    font-weight: bold;
                    padding-top: 5px;
                }

                .image_alt {
                    display: inline-block;
                    height: 120px;
                    width: 290px;
                    text-align: center;
                }

                .image_alt img {
                    margin-top: 5.625px;
                    margin-bottom: 5.625px;
                    height: 25px;
                }
            </style>
            
            <div class="mycard">
                <div class="mycard_img" style="background: url(data:image/png;base64,{{cover}}) center;"></div>
                <div class="mycard_text">
                    <div class="title">{{title}}</div>
                    <div class="image_alt">{{images}}</div>
                </div>
            </div>
        </div>
    </foreignObject>
</svg>